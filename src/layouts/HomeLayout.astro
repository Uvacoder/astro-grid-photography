---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="icon" href="/favicon.ico" />
    <link rel="manifest" href="/site.webmanifest" />
    <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#3B755F" />
    <link
      rel="preload"
      href="/fonts/AzeretMono-Variable.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/Comico-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <meta name="msapplication-TileColor" content="#3B755F" />
    <meta name="theme-color" content="#eaf9b1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  body {
    background-color: #eaf9b1;
  }
  /* Hide the scrollbar for modern browsers */
  ::-webkit-scrollbar {
    width: 0rem; /* Adjust the width as needed */
    background-color: transparent;
  }

  ::-webkit-scrollbar-thumb {
    background-color: transparent;
  }

  /* Hide the scrollbar for Firefox */
  /* Note: This is necessary as Firefox uses a different scrollbar style */
  html {
    scrollbar-width: none;
  }

  body::-webkit-scrollbar {
    width: 0rem; /* Adjust the width as needed */
    background-color: transparent;
  }

  body::-webkit-scrollbar-thumb {
    background-color: transparent;
  }

  @font-face {
    font-family: "AzeretMono";
    src: url("/fonts/AzeretMono-Variable.woff2") format("woff2");
    font-weight: 200 800;
    font-display: swap;
    font-style: normal;
  }
  @font-face {
    font-family: "Comic";
    src: url("/fonts/Comico-Regular.woff2") format("woff2");
    font-weight: 400;
    font-display: swap;
    font-style: normal;
  }
</style>

<script src="/src/js/motion.js"></script>
